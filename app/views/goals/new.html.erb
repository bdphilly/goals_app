<h1>New Goal</h1>

<form action="<%= goals_url %>" method="post">
  <input type="hidden" name="authenticity_token"
    value="<%= form_authenticity_token %>">

  <label for="title">Title</label>
  <input type="text" name="goal[title]" value="" id="title">
  <br>
  <label for="body">Goal</label>
  <br>
  <label for="private">Private?</label>
  <input type="checkbox" name="goal[private]" value="<%= @goal.private %>" id="private">



  <textarea name="goal[body]" value="" id="body"></textarea>
  <br>


  <input type="submit" value="Submit Goal">
</form>