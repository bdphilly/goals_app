<h1>New Goal</h1>

<form action="<%= goals_url %>" method="post">
  <input type="hidden" name="authenticity_token"
    value="<%= form_authenticity_token %>">

  <label for="title">Title</label>
  <input type="text" name="goal[title]" value="" id="title">
  <br>
  <label for="body">Goal</label>
  <br>
  <textarea name="goal[body]" value="" id="body"></textarea>
  <br>
  Private?
  <label for="private">True</label>
  <input id="private" type="radio" name="goal[private]" value="true">
  <label for="not_private">False</label>
  <input id="not_private" type="radio" name="goal[private]" value="false">
  <br>
  <input type="submit" value="Submit Goal">
</form>